<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Shantell+Sans" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* Add a custom font family here */
        body {
            font-family: 'Shantell Sans', sans-serif; /* Replace 'YourFontName' with the actual font name */
        }
      
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm ">
        <div class="container-fluid " style="background-color: white; border: 2px solid black; ">
            
            <ul class="navbar-nav" style="font-size: 20px; display: flex;">
                <a class="navbar-brand" href="#" style="display: flex; align-items: center;">
                    <img src="~/Images/dognavbar.png" style="width: 80px; height: 50px; margin-right: 10px;" />
                    <span style="font-size: 20px; color: black;">RescuePet</span>
                </a>
                <li class="nav-item">
                    <a class="nav-link active" style="color:black" onclick="location.href ='@Url.Action("Pet","Data")'">Pets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:black" onclick="location.href = '@Url.Action("PostaPet","Data")'">Post a Pet?</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:black" onclick="location.href = '@Url.Action("Donations","Data")'">Donations</a>
                </li>
            </ul>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
